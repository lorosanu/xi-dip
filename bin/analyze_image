#!/usr/bin/ruby
# -*- encoding : utf-8 -*-

$LOAD_PATH.unshift 'lib/'
require 'xi_image'

if ARGV.length < 1
  puts 'Usage ./bin/analyze_image <image>'
  exit
end

XiImage::Config.load_yaml('conf/xi_image.yml')

XiImage::Image.new(ARGV[0])
              .color_histogram
              .sort_by {|k,v| -v}
              .each {|k,v| puts "#{k.join('|')}: #{v}"}
